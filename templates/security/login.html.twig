{% extends 'layout/templateNaked.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block body %}
    <div class="login-container">
        <section class="login-body">
            <form method="post" class="container d-flex flex-column align-items-center">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
                <div class="login-label-container position-relative">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="col-4 form-control rounded-pill" autocomplete="email" required autofocus>
                    <label for="email" class="label-text">Email</label>
                </div>
                <div class="login-label-container position-relative">
                    <input type="password" name="password" id="inputPassword" class="col-4 form-control rounded-pill " autocomplete="current-password" required>
                    <label for="password" class="label-text">Mot de passe</label>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <a href="{{ path("app_register") }}">Pas encore de compte ?</a>
                <button class="btn btn-lg btn-primary m-auto col-4 rounded-pill" type="submit">
                    Sign in
                </button>
            </form>
        </section>
    </div>
{% endblock %}
