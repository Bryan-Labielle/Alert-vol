{% extends 'layout/sidebars.html.twig' %}

{% block title %}Toutes les annonces{% endblock %}

{% block main %}
    {% include 'annonce/filter.html.twig' %}
    <div class="container">

        <h1>Toutes les annonces</h1>

        <div class="section ">
            <div class="annonces-header justify-content-between">

                <a class="btn btn-black btn-annonces-header" href="{{ path('app_index') }}">
                    Retour à l'accueil
                </a>

                <div class="small text-center align-self-center">Nombre d'annonces en cours : {{ annonces.getTotalItemCount }}</div>
                <a class="btn btn-blue p-2 w-25 btn-annonces-header" href="{{ path('annonce_new') }}">
                    Ajouter une annonce [+]
                </a>
            </div>
            <div class="row g-5 mt-3">
                {% if queries %}<div class="col-md-6">Vous recherchez
                    {% dump(queries) %}
                    {% if queries.0 %}par date : {{ queries.0 }}{% endif %}
                    {% if queries.1 %}par lieu : {{ queries.1 }}{% endif %}
                    {% if queries.2 %}par mots clés : {{ queries.2 }}{% endif %}
                    <a class="btn btn-action" href="{{ path('annonce_index') }}">
                        Réinitialiser
                    </a>
                    {% endif %}
                </div>
            </div>
            <div class="d-flex justify-content-end mb-2 js-filter-sorting">
                Trier par :
                <span class="ms-3">
                    {{ knp_pagination_sortable(annonces, 'Date', 'a.publishedAt') }}
                </span>
                <span class="ms-3">
                    {{ knp_pagination_sortable(annonces, 'A-Z', 'a.title') }}
                </span>
            </div>
            <div class="row g-5 mt-2 js-filter-content">
                {% include 'annonce/_annonces.html.twig' %}
            </div>

            <div class="js-filter-pagination text-align-center justify-content-center mt-2 mb-2">
                {{ knp_pagination_render(annonces)}}
            </div>

            <a class="btn btn-black mt-2" href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>

{% endblock %}
