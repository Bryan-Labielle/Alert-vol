{% extends 'layout/sidebars.html.twig' %}

{% block title %}Toutes les annonces{% endblock %}

{% block main %}
    {% include 'annonce/filter.html.twig' %}
    <div class="container">

        <h1>Toutes les annonces</h1>

        <div class="section ">
            <div class="d-flex justify-content-between">

                <a class="btn btn-black" href="{{ path('app_index') }}">
                    Retour à l'accueil
                </a>

                <div class="small text-center align-self-center">Nombre d'annonces en cours : {{ count }}</div>
                <a class="btn btn-blue p-2 w-25" href="{{ path('annonce_new') }}">
                    Ajouter une annonce [+]
                </a>
            </div>
            <div class="row g-5 mt-3">
                {% if queries %}<div class="col-md-6">Vous recherchez
                    {% dump(queries) %}
                    {% if queries.0 %}par date : {{ queries.0 }}{% endif %}
                    {% if queries.1 %}par lieu : {{ queries.1 }}{% endif %}
                    {% if queries.2 %}par mots clés : {{ queries.2 }}{% endif %}
                    <a class="btn btn-action" href="{{ path('annonce_index') }}">
                        Réinitialiser
                    </a>
                    {% endif %}
                </div>
            </div>
            <div class="row g-5 mt-3">
                {% for annonce in annonces %}
                <div class="col-md-4 col-sm-6 mb-4" >

                {% include '/annonce/_annonceMin.html.twig' %}
                </div>

                {% else %}
                    No records found
                {% endfor %}
            </div>

            <a class="btn btn-black" href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>

{% endblock %}
