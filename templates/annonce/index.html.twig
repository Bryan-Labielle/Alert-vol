{% extends 'base.html.twig' %}

{% block title %}Toutes les annonces{% endblock %}


{% block body %}
    <div class="container">

        <h1>Toutes les annonces</h1>

        <div class="section ">
            <div style="display: flex; justify-content: space-between;">
            <a class="btn btn-dark" href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
                <div class="small text-center align-self-center">Nombre d'annonces en cours : {{ count }}</div>
            <a class="btn btn-primary" href="{{ path('annonce_new') }}">
                Ajouter une annonce [+]
            </a>
        </div>
            <div class="row justify-content-evenly">
                {% dump(annonces) %}
                {# {% include 'annonce/_annonce.twig.html' %}
                {% include 'annonce/_annonce.twig.html' %}
                {% include 'annonce/_annonce.twig.html' %}
                {% include 'annonce/_annonce.twig.html' %} #}
                {% for annonce in annonces %}
                    {% include '/annonce/_annonce.twig.html' %}
                {% else %}
                    No records found
                {% endfor %}
            </div>

            <a class="btn btn-dark" href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>

{% endblock %}
