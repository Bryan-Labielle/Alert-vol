<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{ annonce.title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% include 'admin/modal/_modalshowannonces.html.twig' %}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form method="post" action="{{ path('admin_publish', {'id': annonce.id}) }}"
                      onsubmit="return confirm('' +
               'Vous allez publier cette annonce .\n' +
               'Souhaitez-vous continuer ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('publish' ~ annonce.id) }}">
                    <button class="btn btn-success d-flex p-2"><i class="fas fa-edit"></i></i> Publier</button>
                </form>
            </div>
        </div>
    </div>
</div>
